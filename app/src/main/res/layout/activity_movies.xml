<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoviesActivity">


    <TextView
        android:id="@+id/tv1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="70dp"
        android:layout_width="match_parent"
        android:hint="Der geilste Tag"
        android:textSize="15dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/chbt"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv1"
      app:layout_constraintStart_toStartOf="parent"
        android:text="choised"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@id/chbt"
        android:layout_margin="70dp"
        android:layout_width="match_parent"
        android:hint="SpiderMan"
        android:textSize="15dp"
        android:layout_height="wrap_content"/>
    <CheckBox

        android:layout_marginTop="16dp"
        android:id="@+id/chbLn"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_width="wrap_content"
        android:text="choised"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
    android:id="@+id/tv3"
    app:layout_constraintTop_toBottomOf="@id/chbLn"
    android:layout_margin="70dp"
    android:layout_width="match_parent"
    android:hint="Lord of Kng"
    android:textSize="15dp"
    android:layout_height="wrap_content"/>

    <CheckBox

        android:id="@+id/chbbt"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_width="wrap_content"
        android:text="choised"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button

        android:id="@+id/btback"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chbbt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        />









</androidx.constraintlayout.widget.ConstraintLayout>